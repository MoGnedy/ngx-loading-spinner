{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "ngx-loading-spinner",
  "projects": {
    "ngx-loading-spinner": {
      "root": "ngx-loading-spinner",
      "sourceRoot": "ngx-loading-spinner/src",
      "projectType": "library",
      "prefix": "ngx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "ngx-loading-spinner/tsconfig.lib.json",
            "project": "ngx-loading-spinner/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "ngx-loading-spinner/src/test.ts",
            "tsConfig": "ngx-loading-spinner/tsconfig.spec.json",
            "karmaConfig": "ngx-loading-spinner/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "ngx-loading-spinner/tsconfig.lib.json",
              "ngx-loading-spinner/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ngx-loading-spinner"
}